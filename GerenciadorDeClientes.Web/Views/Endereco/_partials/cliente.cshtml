@model GerenciadorDeClientes.Web.Application.DTOs.ClienteDTO;
<div class="d-flex flex-column align-items-center justify-content-center">
    <div class="card shadow-sm w-100">
        <div class="d-flex align-items-center justify-content-center pt-5 pb-3" width="100%">
            @{
                var srcImage = "/images/logo.png";
                if (!string.IsNullOrWhiteSpace(Model.Logotipo))
                    srcImage = Model.Logotipo;
            }
            <img id="imgLogotipo" src="@srcImage" />
            <input type="hidden" value="@Model.Id"/>
        </div>

        <div class="card-body">
            <p class="label-nome">@Model.Nome</p>
            <p class="label-email">@Model.Email</p>
            <div class="d-flex justify-content-center align-items-center">
                <button type="button" class="btn btn-sm btn-outline-secondary d-none">Endereços</button>
            </div>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center justify-content-center mt-4 mb-5">
        <a href="@Url.Action("Index", "Cliente", new { pagina = 1, registros = ViewBag.RegistrosPorPagina})"
           class=" btn btn-outline-primary me-3">
            <i class="fas fa-arrow-left"></i>
            Voltar
        </a>

    </div>
</div>